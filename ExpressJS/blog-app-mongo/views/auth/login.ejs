<form class="w-50 m-auto p-5 mt-5 shadow" method="post" action="/auth/login" novalidate>
  <h3>Login</h3>
  <input
    type="email"
    class="form-control mb-2"
    name="email"
    placeholder="Email"
    required
  />
  <input
    type="password"
    class="form-control mb-2"
    name="password"
    placeholder="Password"
    required
  />
  <button type="submit" class="btn btn-primary">Login</button>

  <a href="/auth/register" class="btn btn-primary" type="submit">Register</a>
</form>
