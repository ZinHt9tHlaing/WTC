<form
  class="w-50 m-auto p-5 mt-5 shadow"
  method="post"
  action="/auth/register"
  novalidate
>
  <h3>Register</h3>
  <input
    type="text"
    class="form-control mb-2"
    name="name"
    placeholder="Name"
    required
  />
  <input
    type="email"
    class="form-control mb-2"
    name="email"
    placeholder="Email"
    required
  />
  <input
    type="password"
    class="form-control mb-2"
    name="password"
    placeholder="Password"
    required
  />
  <button type="submit" class="btn btn-primary">Register</button>

  <a href="/auth/login" class="btn btn-primary" type="submit">Login</a>
</form>
